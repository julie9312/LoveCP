<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.julie.lovecp"
    android:targetSandboxVersion="1">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".PasswdHint"></activity>
        <activity
            android:name=".UpdatePosting"
            android:parentActivityName=".Post_Main"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AddPosting"
            android:parentActivityName=".Post_Main"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AfterLogin"
            android:parentActivityName=".First"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Post_Main"
            android:parentActivityName=".First"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Papago"
            android:parentActivityName=".First"
            android:screenOrientation="portrait" />
        <activity
            android:name=".First"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Login"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Register"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>